                                <h3 class="mb-3"><a class="post-title" href="{{ path('public_article_show', {id: article.id, slug: article.titleSlug}) }}">{{ article.title }}</a></h3>
                                <ul class="card-meta list-inline">
                                    <li class="list-inline-item">
                                        <a href="author-single.html" class="card-meta-author">
                                            <img src="{{ asset('images/john-doe.jpg') }}" alt="John Doe">
                                            <span>{{ article.user.fullname }}</span>
                                        </a>
                                    </li>
                                    <li class="list-inline-item">
                                        <i class="ti-timer"></i>3 Min To Read
                                    </li>
                                    <li class="list-inline-item">
                                        <i class="ti-calendar"></i>{{ article.articleDatePosted | date("F j, Y") }}
                                    </li>
                                    <li class="list-inline-item">
                                        <ul class="card-meta-tag list-inline">
                                            {% for section in article.sections %}
                                            <li class="list-inline-item"><a href="#">{{ section.sectionTitle }}</a></li>
                                            {% endfor %}
                                        </ul>
                                    </li>
                                </ul>
                                {% set truncateText = article.text|length > 300 ? article.text|slice(0, 300) : article.text %}
                                {% set lastSpace = truncateText|split(' ')|length - 1 %}
                                {% set truncatedWords = truncateText|split(' ')|slice(0, lastSpace)|join(' ') %}
                                {% set finalText = truncatedWords ~ '...' %}
                                <p>{{ finalText }}</p>
                                <a href="{{ path('public_article_show', {id: article.id, slug: article.titleSlug}) }}" class="btn btn-outline-primary">Read More</a>
