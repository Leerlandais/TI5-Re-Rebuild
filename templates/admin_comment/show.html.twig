{% extends 'base.html.twig' %}

{% block title %}Comment{% endblock %}

{% block body %}
    <h1>Comment</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ comment.id }}</td>
            </tr>
            <tr>
                <th>Article_id</th>
                <td>{{ comment.articleId }}</td>
            </tr>
            <tr>
                <th>User_id</th>
                <td>{{ comment.userId }}</td>
            </tr>
            <tr>
                <th>Comment_date_created</th>
                <td>{{ comment.commentDateCreated ? comment.commentDateCreated|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Comment_username</th>
                <td>{{ comment.commentUsername }}</td>
            </tr>
            <tr>
                <th>Comment_text</th>
                <td>{{ comment.commentText }}</td>
            </tr>
            <tr>
                <th>Visible</th>
                <td>{{ comment.visible ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_comment_index') }}">back to list</a>

    <a href="{{ path('admin_comment_edit', {'id': comment.id}) }}">edit</a>

    {{ include('admin_comment/_delete_form.html.twig') }}
{% endblock %}
