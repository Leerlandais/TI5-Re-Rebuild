<div class="container-sm mx-auto d-flex flex-column text-center w-25">
    {{ form_start(form) }}
    <div class="mb-3 d-flex flex-column">
        <label for="{{ form.username.vars.id }}" class="form-label text-primary">Username</label>
        {{ form_widget(form.username, {'attr': {'class': "form-control", 'placeholder': 'Name'}}) }}
        {{ form_errors(form.username) }}
    </div>
    <div class="mb-3 d-flex flex-column">
        <label for="{{ form.fullname.vars.id }}" class="form-label text-primary">Full Name</label>
        {{ form_widget(form.fullname, {'attr': {'class': "form-control", 'placeholder': 'Your full name'}}) }}
        {{ form_errors(form.fullname) }}
    </div>
    <div class="mb-3 d-flex flex-column">
        <label for="{{ form.email.vars.id }}" class="form-label text-primary">Email</label>
        {{ form_widget(form.email, {'attr': {'class': "form-control", 'placeholder': 'Email Address'}}) }}
        {{ form_errors(form.email) }}
    </div>
    <div class="mb-3 d-flex flex-column">
        <label for="{{ form.img_loc.vars.id }}" class="form-label text-primary">Image</label>
        {{ form_widget(form.img_loc, {'attr': {'class': "form-control", 'placeholder': 'Image URL'}}) }}
        {{ form_errors(form.img_loc) }}
    </div>
    <div class="mb-3 d-flex flex-column">
        <label for="{{ form.quote.vars.id }}" class="form-label text-primary">Quote</label>
        {{ form_widget(form.quote, {'attr': {'class': "form-control", 'placeholder': 'Favourite Quote'}}) }}
        {{ form_errors(form.quote) }}
    </div>
    <div class="mb-3 d-flex flex-column">
        <label class="form-label text-primary">Password</label>
        {{ form_widget(form.password.first, {'attr': {'class': "form-control", 'placeholder': 'Password'}}) }}
        {{ form_errors(form.password.first) }}
    </div>
    <div class="mb-3 d-flex flex-column">
        <label class="form-label text-primary">Confirm Password</label>
        {{ form_widget(form.password.second, {'attr': {'class': "form-control", 'placeholder': 'Confirm Password'}}) }}
        {{ form_errors(form.password.second) }}
    </div>
    <button class="btn btn-primary btn-sm py-2 px-4 shadow-sm transition-all hover-shadow-lg focus:bg-success active:bg-success mt-2">{{ button_label|default('Save') }}</button>
    {{ form_end(form) }}
</div>
